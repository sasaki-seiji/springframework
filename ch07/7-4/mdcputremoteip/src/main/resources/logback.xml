<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	    <encoder>
	        <pattern>%date %level %logger{64} [%X{remoteIp}] %msg%n</pattern>
	    </encoder>
	</appender>

	<root>
	    <appender-ref ref="STDOUT" />
	</root>

</configuration>
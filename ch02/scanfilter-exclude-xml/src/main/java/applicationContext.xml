<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">
	<context:component-scan base-package="example.componentscan.scanfilter_exclude_xml">
		<context:include-filter type="assignable" expression="example.componentscan.scanfilter_exclude_xml.DomainService"/>
		<context:exclude-filter type="annotation" expression="example.componentscan.scanfilter_exclude_xml.Exclude"/>
	</context:component-scan>
</beans>